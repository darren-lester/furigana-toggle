{
  "manifest_version": 2,
  "name": "Furigana Toggle",
  "version": "1.2.1",
  "description": "Toggle furigana on and off.",
  "author": "Darren Lester",

  "icons": {
    "16": "./logo_16.png",
    "48": "./logo_48.png",
    "128": "./logo_128.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "*://*/*"
  ],

  "web_accessible_resources": [
    "furigana-toggle.css"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Furigana Toggle"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
